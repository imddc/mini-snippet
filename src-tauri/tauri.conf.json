{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "node-version-controller",
  "version": "0.1.0",
  "identifier": "com.node-version-controller.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "width": 600,
        "height": 100,
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "alwaysOnTop": true,
        "center": true,
        "closable": true,
        "hiddenTitle": true,
        "maximizable": true,
        "minimizable": true,
        "shadow": false
      }
    ],
    "macOSPrivateApi": true ,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
